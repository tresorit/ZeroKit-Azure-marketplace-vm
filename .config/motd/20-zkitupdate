#git -C /var/www/zerokit/ fetch -v --dry-run 2>&1 | grep -s "origin/master" | grep -q -i -v "up to date" && echo "Sample backend can be updated (use 'zkitadm upgrade' command)"
#git -C /opt/zerokit/ fetch -v --dry-run 2>&1 | grep -s "origin/master" | grep -q -i -v "up to date" && echo "Zkitadm utility can be updated (use 'zkitadm upgrade' command)"

curl -i https://api.github.com/repos/tresorit/ZeroKit-NodeJs-backend-sample/git/refs/heads/master --max-time 2 2>&1 | grep -s "\"sha\":" | grep -q -v $(git -C /var/www/zerokit/ rev-parse HEAD 2>&1) && echo "Backend sample can be updated, please use 'zkitadm upgrade' command"
curl -i https://api.github.com/repos/tresorit/ZeroKit-Azure-marketplace-vm/git/refs/heads/master --max-time 2 2>&1 | grep -s "\"sha\":" | grep -q -v $(git -C /opt/zerokit/ rev-parse HEAD 2>&1) && echo "Zkitadm utility can be updated, please use 'zkitadm upgrade' command"

exit 0

